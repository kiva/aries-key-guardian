{
  "name": "aries-key-guardian",
  "version": "1.0.0",
  "private": false,
  "description": "Aries Key Guardian for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rm -rf dist/ && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "nodemon --legacy-watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit",
    "test:only": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit --testNamePattern",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migration": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create -d src/db/migration -n"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.3",
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/platform-express": "^8.2.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.0.3",
    "@types/node": "^15.0.2",
    "cache-manager": "^3.6.1",
    "cache-manager-fs-hash": "^0.0.9",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.3",
    "pg": "^8.6.0",
    "protocol-common": "^1.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.3.0",
    "twilio": "^3.62.0",
    "typeorm": "^0.2.34",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@types/qs": "~6.9.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.4.4",
    "@types/cache-manager": "^3.4.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "dotenv": "^9.0.2",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^38.1.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
