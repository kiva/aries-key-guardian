{
  "name": "aries-key-guardian",
  "version": "1.0.0",
  "private": false,
  "description": "Aries Key Guardian for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:debug": "nodemon --legacy-watch",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit",
    "test:only": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit --testNamePattern",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migration": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create -d src/migration -n"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.5",
    "@nestjs/core": "^7.5.5",
    "@nestjs/platform-express": "^7.5.5",
    "@nestjs/swagger": "^4.7.5",
    "@nestjs/typeorm": "^7.1.5",
    "@types/node": "^14.14.11",
    "cache-manager": "^3.4.0",
    "cache-manager-fs-hash": "^0.0.9",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.3.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.0",
    "pg": "^8.5.1",
    "protocol-common": "^0.1.24",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.5",
    "twilio": "^3.54.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/cache-manager": "^2.10.3",
    "@types/jest": "^26.0.18",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts"
  }
}
